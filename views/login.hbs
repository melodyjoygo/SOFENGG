        <script>
            let warning = {{error}}
            $( document ).ready(function() {
                if(warning === 1){
                    alert("Wrong Password");   
                }
                else if(warning === 2){
                    alert("Username Does not Exist");
                }
                else if(warning === 3){
                    alert("Please Do Not Leave Fields Empty")
                }
            });
        </script>
