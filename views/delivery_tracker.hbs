        let firstName = "{{firstName}}"
        let lastName = "{{lastName}}"
        let email = "{{currEmail}}"
        let password = "{{password}}"
        let warning = {{message}}
        $( document ).ready(function(){
            
            let userType = "{{userType}}"
            if(userType == "2" || userType == "1"){
                $('#myBtn').css("display","none")
                $('button.edit').css("display","none")
                $('#itemTable td:nth-child(8),#itemTable th:nth-child(8)').hide()
            }
            
            if(warning === 1){
                alert("Please Do Not Leave Fields Empty")
                window.location = '/delivery_tracker';
            }
            else if(warning === 2){
                alert("Stock has been Added")
                window.location = '/delivery_tracker';
            }
            else if(warning === 3){
                alert("Edit Saved")
                window.location = '/delivery_tracker';
            }
            
            $('button.edit').click(function(){
                let deliveryID = $(this).attr("data-id")
                let receiptNumber = $(this).attr("data-receiptNumber")
                let itemID = $(this).attr("data-itemID")
                let quantity = $(this).attr("data-quantity")
                let invoiceNumber = $(this).attr("data-invoiceNumber")
                let poNumber = $(this).attr("data-poNumber")
                let unitPrice = $(this).attr("data-unitPrice")
                let requestID = $(this).attr("data-requestID")
                let checkNumber = $(this).attr("data-checkNumber")
                
                
                $('#deliveryIDLabel').val(deliveryID)
                $('#deliveryReceiptNumberLabel').val(receiptNumber)
                $('#material_dropdown').val(itemID)
                $('#quantityLabel').val(quantity)
                $('#invoiceNumberLabel').val(invoiceNumber)
                $('#poNumberLabel').val(poNumber)
                $('#unitCostLabel').val(unitPrice)
                $('#requestIDLabel').val(requestID)
                $('#checkNumberLabel').val(checkNumber)
    
                $('#editDeliveryModal').css("display","block")
            })
            
            $('#close3').click(function(){
                $('#editDeliveryModal').css("display","none")
            })
            
            $('#confirmBtn').click(function(){
                let pass = $('#confirmPassLabel').val()
                
                if(pass.toString() === password.toString()){
                    
                    $("#firstNameLabel").val(firstName)
                    $("#lastNameLabel").val(lastName)
                    $("#emailLabel").val(email)
                    
                    editProfile.style.display = "block";
                    enterPass.style.display = "none";
                    profile.style.display = "none";  
                }
                else{
                    $("#errorMessage").html("Wrong Password")
                    $("#errorMessage").css("display","block")
                    setTimeout(function() {
                        $('#errorMessage').fadeOut('fast');
                    }, 1000)
                }
            })
            
            $('#editProfileBtn').click(function(){
                let fname = $("#firstNameLabel").val()
                let lname = $("#lastNameLabel").val()
                let email = $("#emailLabel").val()
                let password = $("#npass").val()
                let confpassword = $("#cpass").val()
                
                $.post("/editAccount",{
                    fname: fname,
                    lname: lname,
                    email: email,
                    password: password,
                    confpassword: confpassword
                },function(data){
                    if(data === "success"){
                        alert("Account Details Saved")
                        window.location = '/delivery_tracker'
                    }
                    else if(data === "exist"){
                        $("#editFormMessage").html("Email Already Exists")
                        $("#editFormMessage").css("display","block")
                        setTimeout(function() {
                            $('#editFormMessage').fadeOut('fast');
                        }, 1000)
                    }
                    else if(data === "invalid"){
                        $("#editFormMessage").html("Invalid Email")
                        $("#editFormMessage").css("display","block")
                        setTimeout(function() {
                            $('#editFormMessage').fadeOut('fast');
                        }, 1000)
                    }
                    else if(data === "empty"){
                        $("#editFormMessage").html("Please Do Not Leave Empty Fields")
                        $("#editFormMessage").css("display","block")
                        setTimeout(function() {
                            $('#editFormMessage').fadeOut('fast');
                        }, 1000)
                    }
                })
            })
            
            $('#editProfileClose').click(function(){
                editProfile.style.display = "none";
                $('div.modal-backdrop').css("display","none")
            })
        });
